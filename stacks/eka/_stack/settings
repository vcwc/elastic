#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/elastic/apm_server/eka"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_eka"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_eka"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume:/usr/share/elasticsearch/data"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_EKA_ELASTICSEARCH_MODULE_ELASTICSEARCH_PORT,\
$VCW_STACK_EKA_KIBANA_MODULE_KIBANA_PORT,\
$VCW_STACK_EKA_ELASTICSEARCH_PORTS,\
$VCW_STACK_EKA_KIBANA_PORTS,\
$VCW_STACK_EKA_APM_SERVER_PORTS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_STACK_STACKS="\
vcwc/elastic/search,\
vcwc/elastic/kibana,\
vcwc/elastic/apm_server"
export VCW_STACK_GLOBAL_STACK_STACKNAMES="\
vcw_stack_elasticsearch,\
vcw_stack_kibana,\
vcw_stack_apm_server"
export VCW_STACK_EKA_ELASTICSEARCH_MODULE_ELASTICSEARCH_PORT=
export VCW_STACK_EKA_KIBANA_MODULE_KIBANA_PORT=
export VCW_STACK_EKA_APM_SERVER_MODULE_APM_SERVER_PORT=
export VCW_STACK_EKA_ELASTICSEARCH_PORTS="9200:9200"
export VCW_STACK_EKA_KIBANA_PORTS="5601:5601"
export VCW_STACK_EKA_APM_SERVER_PORTS="8200:8200"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export VCW_STACK_EKA_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="1526m"
export VCW_STACK_EKA_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS elasticsearch.base

# START SETTINGS kibana.base
export VCW_STACK_EKA_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_EKA_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base

# START SETTINGS apm_server
export VCW_STACK_EKA_APM_SERVER_MODULE_APM_SERVER_PORT="8200"
export VCW_STACK_EKA_APM_SERVER_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_EKA_APM_SERVER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS apm_server

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
