export EKG_GRAFANA_ENVIRONMENT_GRAFANA_SERVER_ROOT_URL="${EKG_GRAFANA_MODULE_GRAFANA_SERVER_ROOT_URL}"
# END MODULE SETTINGS

# START VOLUMES SETTINGS
# END VOLUMES SETTINGS

# START PORTS SETTINGS
export EKG_ELASTICSEARCH_PORTS_ELASTICSEARCH_PORT="${EKG_ELASTICSEARCH_MODULE_ELASTICSEARCH_PORT}"
export EKG_KIBANA_PORTS_KIBANA_PORT="${EKG_KIBANA_MODULE_KIBANA_PORT}"
export EKG_GRAFANA_PORTS_GRAFANA_PORT="${EKG_GRAFANA_MODULE_GRAFANA_PORT}"
# END PORTS SETTINGS

# START NETWORKS SETTINGS
# END NETWORKS SETTINGS

# START DEPLOY SETTINGS
export EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="${EKG_ELASTICSEARCH_MODULE_ELASTICSEARCH_MEMORY_LIMIT}"
export EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${EKG_ELASTICSEARCH_MODULE_ELASTICSEARCH_MEMORY_RESERVED}"
export EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="${EKG_KIBANA_MODULE_KIBANA_MEMORY_RESERVED}"
export EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${EKG_KIBANA_MODULE_KIBANA_MEMORY_LIMIT}"
export EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END DEPLOY SETTINGS
