#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/elastic/search/ekg"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_ekg"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_ekg"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_grafana_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume:/usr/share/elasticsearch/data,
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_grafana_volume:/var/lib/grafana"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_EKG_ELASTICSEARCH_MODULE_ELASTICSEARCH_PORT,\
$VCW_STACK_EKG_KIBANA_MODULE_KIBANA_PORT,\
$VCW_STACK_EKG_GRAFANA_MODULE_GRAFANA_PORT,\
$VCW_STACK_EKG_ELASTICSEARCH_PORTS,\
$VCW_STACK_EKG_KIBANA_PORTS,\
$VCW_STACK_EKG_GRAFANA_PORTS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_STACK_STACKS="\
vcwc/elastic/search,\
vcwc/elastic/kibana,\
vcwc/grafana"
export VCW_STACK_GLOBAL_STACK_STACKNAMES="\
vcw_stack_elasticsearch,\
vcw_stack_kibana,\
vcw_stack_grafana"
export VCW_STACK_EKG_ELASTICSEARCH_MODULE_ELASTICSEARCH_PORT=
export VCW_STACK_EKG_KIBANA_MODULE_KIBANA_PORT=
export VCW_STACK_EKG_GRAFANA_MODULE_GRAFANA_PORT=
export VCW_STACK_EKG_ELASTICSEARCH_PORTS=
export VCW_STACK_EKG_KIBANA_PORTS=
export VCW_STACK_EKG_GRAFANA_PORTS=
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_grafana_volume: { external: true },"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export VCW_STACK_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="756m"
export VCW_STACK_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
# END SETTINGS elasticsearch.base

# START SETTINGS kibana.base
export VCW_STACK_EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base

# START SETTINGS grafana.base
export VCW_STACK_EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

