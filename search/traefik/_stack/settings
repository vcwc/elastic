#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcw/elastic/search"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_elasticsearch"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_elasticsearch"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume:/usr/share/elasticsearch/data"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_ELASTICSEARCH_ENVIRONMENT,\
$VCW_STACK_ELASTICSEARCH_COMMAND,\
$VCW_STACK_ELASTICSEARCH_PORTS,\
$VCW_STACK_ELASTICSEARCH_VOLUMES,\
$VCW_STACK_ELASTICSEARCH_NETWORKS,\
$VCW_STACK_ELASTICSEARCH_DEPLOY_MODE,\
$VCW_STACK_ELASTICSEARCH_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="elasticsearch"
export VCW_STACK_GLOBAL_IMAGE_NAME="elasticsearch"
export VCW_STACK_ELASTICSEARCH_ENVIRONMENT="\
'cluster.name=elasticsearch', \
'bootstrap.memory_lock=true', \
ES_JAVA_OPTS=-Xms${DOLLAR}{VCW_STACK_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xmx${DOLLAR}{VCW_STACK_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}, \
'discovery.type=single-node'"
export VCW_STACK_ELASTICSEARCH_COMMAND=
export VCW_STACK_ELASTICSEARCH_PORTS=
export VCW_STACK_ELASTICSEARCH_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume:/usr/share/elasticsearch/data'"
export VCW_STACK_ELASTICSEARCH_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_ELASTICSEARCH_DEPLOY_MODE="replicated"
export VCW_STACK_ELASTICSEARCH_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/elasticsearch,/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/elasticsearch/\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch.loadbalancer.server.port=9200,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch.entrypoints=conteco,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/elasticsearch\") ]
${DOLLAR}{VCW_STACK_ELASTICSEARCH_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_elasticsearch_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export VCW_STACK_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="756m"
export VCW_STACK_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
# END SETTINGS elasticsearch.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
