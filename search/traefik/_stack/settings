#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="\
vcwc/elastic/kibana,\
vcwc/nginx/rewrite"
export VCW_STACK_GLOBAL_STACKNAMES_PREVIOUS="\
vcw_stack_kibana,\
vcw_stack_url_rewrite"
export VCW_STACK_GLOBAL_STACKNAMES="\
vcw_stack_kibana,\
vcw_stack_kibana_ui_kibana"
export VCW_STACK_GLOBAL_BOOTSTACKS="\
vcw_stack_kibana"
export VCW_STACK_GLOBAL_RUNSTACKS="\
vcw_stack_kibana_ui_kibana"
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_KIBANA_UI_KIBANA_ENVIRONMENT_CONF_PATH,\
$VCW_STACK_KIBANA_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM,\
$VCW_STACK_KIBANA_UI_KIBANA_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_NETWORKS,$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_KIBANA_UI_KIBANA_ENVIRONMENT_CONF_PATH="/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/kibana"
export VCW_STACK_KIBANA_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kibana:5601"
export VCW_STACK_KIBANA_UI_KIBANA_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,\
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kibana.loadbalancer.server.port=80,\
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kibana.entrypoints=conteco,\
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kibana.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/kibana\")]
${DOLLAR}{VCW_STACK_KIBANA_UI_KIBANA_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS kibana.base
export VCW_STACK_KIBANA_MODULE_KIBANA_PORT="5601"
export VCW_STACK_KIBANA_PORTS="${VCW_STACK_KIBANA_MODULE_KIBANA_PORT}:5601"
export VCW_STACK_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base
# START SETTINGS nginx.base
export VCW_STACK_KIBANA_UI_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_KIBANA_UI_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

